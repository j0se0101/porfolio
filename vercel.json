{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/linkedin",
      "destination": "https://www.linkedin.com/in/eddevfdez/",
      "permanent": false
    },
    {
      "source": "/github", 
      "destination": "https://github.com/j0se0101",
      "permanent": false
    },
    {
      "source": "/cv",
      "destination": "/icons/CV EDUARDO FERNANDEZ.pdf",
      "permanent": false
    }
  ]
}
